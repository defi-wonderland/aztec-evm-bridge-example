{
  "name": "@substancelabs/aztec-evm-bridge-sdk",
  "version": "0.0.1",
  "types": "dist/index.d.ts",
  "module": "dist/index.mjs",
  "main": "dist/index.mjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "default": "./dist/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "clean": "rm -rf dist",
    "format": "prettier --write \"**/*.{json,ts}\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch"
  },
  "dependencies": {
    "@azguardwallet/client": "^0.4.2",
    "@aztec/accounts": "1.1.3",
    "@aztec/aztec.js": "1.1.3",
    "@aztec/foundation": "1.1.3",
    "@aztec/kv-store": "1.1.3",
    "@aztec/noir-contracts.js": "1.1.3",
    "@aztec/pxe": "1.1.3",
    "@aztec/stdlib": "1.1.3",
    "@lodestar/types": "^1.33.0",
    "viem": "^2.33.2"
  },
  "devDependencies": {
    "@azguardwallet/types": "^0.4.1",
    "@eslint/js": "^9.33.0",
    "@types/node": "^24.2.0",
    "dotenv": "^17.2.1",
    "eslint": "^9.22.0",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0",
    "vitest": "^3.2.4"
  }
}
